<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>3ra Entrega</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>
    <div class="container">
            <!-- NAVBAR -->
                <%- include('./partials/navbar_other.ejs', { user }) %> 
            <!-- NAVBAR -->
            <h2 class="px-3 my-4 bg-danger">Add new products</h2>
            <form id='addProd' action='/api/products' method='POST'>
                <input id="prodTitle" name="name" type="text" placeholder="Title" class="form-control w-50 my-2">
                <input id="prodPrice" name="price" type="number" placeholder="Price" class="form-control w-50 my-2">
                <input id="prodDescription" name="description" type="text" placeholder="Description"
                    class="form-control w-50 my-2">
                <input id="prodThumbnail" name="photoURL" type="text" placeholder="Url image" class="form-control w-50 my-2">
                <input id="prodStock" name="stock" type="number" placeholder="Stock" class="form-control w-50 my-2">
                <button type="submit" onclick="delalert()" class="btn btn-danger">Add Product</button>
            </form>
            <!-- PRODUCTS FORM EXAMPLE -->
            <div class="my-3">
                <p> Title: Vader Figure <br>
                    Price: 17 <br>
                    Thumbnail: https://m.media-amazon.com/images/I/91XyD3SUP+L._AC_SX569_.jpg</p>
            </div>
    </div>
    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>

    <script>
        function delalert() {
            Swal.fire({
                title: "Product Added!",
                background: '#161616',
                showConfirmButton: false,
                width: "200px",
                timer:1100,
            })
        }
    </script>
</body>
</html>